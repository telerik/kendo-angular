#!/usr/bin/env bash

# Builds example projects and deploys them to GH Pages

WORKSPACE_PROJECTS=(integration-pwa integration-pwa-material)
STANDALONE_PROJECTS=(kendo-angular-finance-portfolio grid-charts-integration)

set -e

# Workspace Projects
npm ci
rm -rf dist

for PROJECT in "${WORKSPACE_PROJECTS[@]}"
do
  echo Building ${PROJECT}
  ng build ${PROJECT} --prod --base-href
done

# Standalone Projects
for PROJECT in "${STANDALONE_PROJECTS[@]}"
do
  pushd ../examples-standalone/${PROJECT} > /dev/null

  echo Building ${PROJECT}
  npm ci
  rm -rf dist
  ng build --prod --base-href
  mv dist/${PROJECT} ../../examples/dist

  popd > /dev/null
done

# Copy static assets
cp static/* dist

# Deploy to GH Pages using angular-cli-ghpages
echo npx ngh

